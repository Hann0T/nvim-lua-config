syntax on
set number
set mouse=a
set showcmd
set ruler
set encoding=utf-8
set showmatch
set sw=2
set relativenumber
set laststatus=2
set backspace=2
set guioptions-=T
set guioptions-=L
set noshowmode
set clipboard=unnamed,unnamedplus

let mapleader = " "

" Get out of insert mode 
imap jk <Esc>

" save file
nmap <leader>fs :w <CR>

